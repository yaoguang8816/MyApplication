<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baijunfeng.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppBarLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TabActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CollapsingToolbarAndScrollingActivity"
            android:label="@string/title_activity_collpsing_toolbar_and_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AncientPoetryActivity"
            android:label="@string/title_activity_ancient_poetry"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LiteratureDetailActivity"
            android:label="@string/title_activity_literature_detail"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--目前不支持对外数据库访问，如果需要支持，打开此处provider定义即可-->
        <!--<provider android:name=".database.LiteratureContentProvider" android:authorities="com.example.baijunfeng.myapplication.database.LiteratureDatabaseHelper"/>-->

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0a0a1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.baijunfeng.myapplication.LiteratureDetailActivity"
    tools:showIn="@layout/activity_literature_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/literature_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_margin="@dimen/text_margin"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/literature_content" />

        <TextView
            android:id="@+id/literature_annotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:visibility="gone"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
